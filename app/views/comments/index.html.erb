 <!-- Portfolio Grid -->
    <section class="bg-light" id="portfolio">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading">
              
              <% if @user.present? %>
                <h1><%= @user.name %>さんの絵＆SS</h1>
                <h3 class="section-subheading text-muted">
               <%= @user.introduce %>
               
               
                <% if @user.tweet.present? %>
                  <ul class="list-inline social-buttons aaa">
                    
                    <li class="list-inline-item">
                      <a href="http://twitter.com/<%= @user.tweet%>">
                        <i class="fa fa-twitter"></i>
                      </a>
                    </li>
                  </ul>
                <% end %>
                
                
            </h3>
              <% else %>
                <h1>みんなの絵＆SS</h1>
                <h3 class="section-subheading text-muted">picture & comment of all user's</h3>
              <% end %>

            </h2>
          </div>
        </div>
        <div class="row">
 
	     
           <% @comments.each do |comment| %>
          <div class="col-md-4 col-sm-6 portfolio-item">
 
          		  <%= link_to comment_path(comment), class: "portfolio-link" do %>
          		  
              <div class="portfolio-hover">
                <div class="portfolio-hover-content">
                  <i class="fa fa-plus fa-3x">
                    <h2>詳細みちゃお。</h2>
                  </i>
                </div>
              </div>
              <%= image_tag comment.image.url(:medium),:class => "img-fluid" %>
              <% end %>
               
            <div class="portfolio-caption">
              <h4>
                <ui>
                  <%= link_to comment.song.title, song_path(comment.song) %><br>
                  <%# <%= link_to comment.body,comment %>
                </ui>
              </h4>
            </div>
          </div>
          <% end %>

        </div>
      </div>
</section>