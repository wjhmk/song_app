<!-- Team -->
    <section class="bg-light" id="team">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading">
               ユーザー一覧
            </h2>
            <h3 class="section-subheading text-muted">the list of all user</h3>
          </div>
        </div>
        
        <div class="row">
          
        <% @users.each do |user| %>
          <div class="col-sm-4">
            <div class="team-member">
             <img class="mx-auto rounded-circle" src="assets/avatar.jpg" alt="">
              <h4>
                <%= link_to user.name, user %>
              </h4>
              <p class="text-muted">
                if you want to get more infomation</br>
                click the above link
              </p>
              
                  <% if user.tweet.present? %>
                  <ul class="list-inline social-buttons aaa">
                    
                    <li class="list-inline-item">
                      <a href="http://twitter.com/<%= user.tweet%>">
                        <i class="fa fa-twitter"></i>
                      </a>
                    </li>
                  </ul>
                  <% end %>
                  
            </div>
          </div>
        <% end %>
 
        </div>
        
        
        
        <div class="row">
          <div class="col-lg-8 mx-auto text-center">
            <p class="large text-muted">
              Enjoy your chara-design!!! </br>We appliciate if you tweet about this web site!!</br>Thank you for comming our Let's キャラデザ！！！
              </p>
          </div>
        </div>
      </div>
    </section>