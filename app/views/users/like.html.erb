<section class="bg-light" id="portfolio">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading">
                <h1><%= @user.name %>さんの「この曲見たい」一覧</h1>
                <h3 class="section-subheading text-muted">
               <%= @user.introduce %>
                <% if @user.tweet.present? %>
                  <ul class="list-inline social-buttons aaa">
                    
                    <li class="list-inline-item">
                      <a href="http://twitter.com/<%= @user.tweet%>">
                        <i class="fa fa-twitter"></i>
                      </a>
                    </li>
                  </ul>
                <% end %>
            </h3>
            </h2>
          </div>
        </div>
        <div class="row">
          
           <% @songs.each do |song| %>
          <div class="col-md-4 col-sm-6 portfolio-item">
            <a class="portfolio-link" data-toggle="modal" href="#portfolioModal1">
              <div class="portfolio-hover">
                <div class="portfolio-hover-content">
                  <i class="fa fa-plus fa-3x"></i>
                </div>
              </div>
              
              
            
              <img class="img-fluid" src="/assets/noimage.jpg" alt="">
            </a>
            <div class="portfolio-caption">
 
              <h4><%= link_to song.title, song %><br><small class="author">by <%= song.singer %></small><br></h4>
              <small class="author"><%= link_to song.user.name, "/users/#{song.user_id}" %>の投稿：<%= time_ago_in_words(song.created_at) %> before</small>
              <p class="text-muted">
                <%= link_to like_song_path(song), method: :put, class: "btn btn-default btn-sm" do %>
                共感:<%= song.get_upvotes.size %>
                </p>
              <% end %>
            
            </div>
          </div>
          
          <% end %>

        </div>
      </div>
</section>