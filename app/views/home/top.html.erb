<!-- Header -->
    <header class="masthead" style="background-image:url(<%= asset_path "b5.jpg" %>)" >
      <div class="container">
        <div class="intro-text">
          <div class="intro-lead-in">Welcome To Let's chara-design!</div>
          <div class="intro-heading text-uppercase">Let's キャラデザ!</div>
          <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#about">なにそれ？</a>
        </div>
      </div>
